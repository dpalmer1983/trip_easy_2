<div class="page-header">
  <h1>
    Participants
    <a href="/participants/new" class="btn btn-lg btn-success">New Participant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Trip</th>
        <th>Actions</th>
      </tr>

      <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.user_id %></td>
        <td><%= participant.trip_id %></td>
        <td>
          <a href="/participants/<%= participant.id %>" class="btn btn-primary">Show</a>
          <a href="/participants/<%= participant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_participant/<%= participant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
