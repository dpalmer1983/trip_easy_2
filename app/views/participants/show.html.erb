<div class="page-header">
  <h3>Participant #<%= @participant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Participant</dt>
      <dd><%= @participant.user.first_name %></dd>

      <dt>Email</dt>
      <dd><%= @participant.user.email %></dd>

      <dt>Trip</dt>
      <dd><%= @participant.trip.name %></dd>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/participants" class="btn btn-primary">
        Back
      </a>
      <a href="/participants/<%= @participant.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_participant/<%= @participant.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
