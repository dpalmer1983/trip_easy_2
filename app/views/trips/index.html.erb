<div class="page-header">
  <h1>
    Trips
    <a href="/trips/new" class="btn btn-lg btn-success">New Trip</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Destination</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Description</th>
        <th>Trip Organizer</th>
        <th>Actions</th>
      </tr>

      <% @trips.each do |trip| %>
      <tr>

<!-- insert code here to get the trips to show up only if the person has access to them (i.e. is only an organizer or a participant in the trip)... it'll be an if-else statement-->

        <td><%= trip.name %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.description %></td>
        <td><%= trip.user.first_name %> <%= trip.user.last_name %></td>
        <td>
          <a href="/trips/<%= trip.id %>" class="btn btn-primary">Show</a>
          <a href="/trips/<%= trip.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_trip/<%= trip.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
