<!-- Validation failure messages -->
<% if @trip.errors.any? %>
<% @trip.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <div class="page-header">
        <h3>Add Trip</h3>
      </div>

      <div class="row">
        <div class="col-md-12">
          <form action="/create_trip" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for name -->
            <div class="form-group">
              <label for="name" class="control-label">
                Trip name
              </label>

              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @trip.name %>">
            </div>

            <!-- Label and input for destination -->
            <div class="form-group">
              <label for="destination" class="control-label">
                Destination
              </label>

              <input type="text" id="destination" name="destination" placeholder="Destination" class="form-control" value="<%= @trip.destination %>">
            </div>


            <!-- Label and input for start_date -->
            <div class="container">
              <div class='col-md-3'>
                <div class="form-group">
                  <label for="start_date" class="control-label">
                    Trip Start Date
                  </label>
                  <div class='input-group date' id='datetimepicker6'>
                    <input type='text' name="start_date" class="form-control" />
                    <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                  </div>
                </div>
              </div>


              <div class='col-md-3'>
                <div class="form-group">
                  <label for="end_date" class="control-label">
                    Trip End Date
                  </label>
                  <div class='input-group date' id='datetimepicker7'>
                    <input type='text' name="end_date" class="form-control" />
                    <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                  </div>
                </div>
              </div>
            </div>


            <div class="form-group">
              <label for="description" class="control-label">
                Description
              </label>

              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @trip.description %></textarea>
            </div>


            <!-- Label and input for your first trip participant -->
            <div class="form-group">
              <label for="participant" class="control-label">
                First participant for the trip
              </label>
              <small>You'll be able to add more in Edit page</small>
              <div>
                <select name="participant_id">
                  <% User.all.each do |user| %>
                  <% if user.id != current_user.id %>
                  <option value="<%= user.id %>"><%= user.username %></option>
                  <% end %>
                  <% end %>
                </select>
              </div>
            </div>

            <!-- Label and input for your first trip activity -->

            <div class="form-group">
              <div class="form-group">
                <div class='col-md-4'>
                  <a class="btn btn-default" href="/activities/new" role="button">Create an activity</a>
                </div>
              </div>

              <div class="form-group">
                <div class='col-md-4'>
                  <a class="btn btn-default" href="/participants/new" role="button">Create a participant</a>
                </div>
              </div>
            </div>

          </div>



          <div class="form-group">
            <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
          </div>

          <p></p>
          <p></p>

          
          <div>
            <button class="btn btn-success">
              Create Trip
            </button>
            or
            <a href="/trips">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>

<script type="text/javascript">
$('#datetimepicker6').datetimepicker({
  format: 'MMMM D, Y',
  defaultDate: "<% if @trip.start_date != nil %><%= @trip.start_date %><% end %>"
  // defaultDate: "<% if @trip.start_date != nil %><%= @trip.start_date.strftime("%m/%d/%y") %><% end %>"
});
$('#datetimepicker7').datetimepicker({
  format: 'MMMM D, Y',
  useCurrent: false, //Important! See issue #1075
  defaultDate: "<% if @trip.end_date != nil %><%= @trip.end_date %><% end %>"
});
$("#datetimepicker6").on("dp.change", function (e) {
  $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
});
$("#datetimepicker7").on("dp.change", function (e) {
  $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
});
</script>
