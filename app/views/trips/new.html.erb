<!-- Validation failure messages -->
<% if @trip.errors.any? %>
<% @trip.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Add Trip</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_trip" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Trip name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @trip.name %>">
      </div>

      <!-- Label and input for destination -->
      <div class="form-group">
        <label for="destination" class="control-label">
          Destination
        </label>

        <input type="text" id="destination" name="destination" placeholder="Destination" class="form-control" value="<%= @trip.destination %>">
      </div>

      <!-- Label and input for start_date -->
      <div class="container">
        <div class='col-md-5'>
          <div class="form-group">
            <label for="start_date" class="control-label">
              Start date
            </label>
            <div class='input-group date' id='datetimepicker6'>
              <input type='text' class="form-control" name="start_date" id="start_date" value="<%= @trip.start_date %>">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
        <div class='col-md-5'>
          <div class="form-group">
            <label for="end_date" class="control-label">
              End date
            </label>
            <div class='input-group date' id='datetimepicker7'>
              <input type='text' class="form-control" name="end_date" id="end_date" value="<%= @trip.end_date %>" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
      </div>


      <!-- Label and input for user_id -->
      <!-- this is frustrating - it should be current_user but instead the only thing that seems to work is @trip.user_id. something is happening with Devise helper method -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>

      <button class="btn btn-success">
        Create Trip
      </button>
      or
      <a href="/trips">Cancel</a>
    </form>
  </div>
</div>


<!-- javascript for date and time pickers -->



<script type="text/javascript">
$(function () {
  $('#datetimepicker6').datetimepicker();
  $('#datetimepicker7').datetimepicker({
    useCurrent: false //Important! See issue #1075
  });
  $("#datetimepicker6").on("dp.change", function (e) {
    $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
  });
  $("#datetimepicker7").on("dp.change", function (e) {
    $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
  });
});
</script>
