<div class="page-header">
  <h3>Trip <%= @trip.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @trip.name %></dd>

      <dt>Destination</dt>
      <dd><%= @trip.destination %></dd>

      <dt>Start date</dt>
      <dd><%= @trip.start_date %></dd>

      <dt>End date</dt>
      <dd><%= @trip.end_date %></dd>

      <dt>Description</dt>
      <dd><%= @trip.description %></dd>
      <dt>Activities</dt>
      <dd><%= @trip.activities %></dd>
      <!-- this requires a .each loop to show each activity in the trip -->
    </ul>




    <!-- this is working - don't change it -->
    <dt>Trip Participants</dt>
    <dd>
      <ul class="list-group">
        <% @trip.participants.each do |trip| %>
        <p>
          <%= trip.user.first_name %>
          <%= trip.user.last_name %>:
          <%= trip.user.email %>
        </p>
        <% end %>
      </ul>
    </ul>

  </dd>
</dl>
</div>



<div class="btn-group btn-group-justified">
  <a href="/trips" class="btn btn-primary">
    Back
  </a>
  <a href="/trips/<%= @trip.id %>/edit" class="btn btn-warning">
    Edit
  </a>
  <a href="/delete_trip/<%= @trip.id %>" class="btn btn-danger" rel="nofollow">
    Delete
  </a>
</div>
